<h1>Boite de réception</h1>

<div class = container-md>
<%= button_to "Recevoir un email", { action: "create" }, data: { turbo_action: "advance" }, class: "btn btn-primary" %>

<div id = "new_email">
<table class = "table table-dark">
<thead>
<tr>
<th scope="col1">N°</th>
<th scope="col2">Objet</th>
<th scope="col3">Mails</th>

</tr>
<ul id="emails-list">
  <% @emails.each do |emails| %>
  <%=render partial:"message", locals:{emails:emails} %>
  <% end %>
</ul>

</thead>
</table>
</div>
</div>
